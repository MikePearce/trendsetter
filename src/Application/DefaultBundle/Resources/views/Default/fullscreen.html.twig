<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Trendsetter: All the trends, all the time</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
  <!-- Bootstrap -->    
  {% stylesheets
    '@ApplicationDefaultBundle/Resources/public/css/*'
  %}<link rel="stylesheet" href="{{ asset_url }}" />
  {% endstylesheets %}
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.0/jquery.min.js "></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.1/js/bootstrap.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.1.3/angular.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.2.0/ui-bootstrap.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.2.0/ui-bootstrap-tpls.js"></script>
  {% javascripts '@ApplicationDefaultBundle/Resources/public/js/filters.js'
                 '@ApplicationDefaultBundle/Resources/public/js/app.js' %}
    <script src="{{ asset_url }}"></script>
  {% endjavascripts %}

    <style>
      body {
        padding-top: 10px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    </style>

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="../assets/js/html5shiv.js"></script>
    <![endif]-->

  </head>
  <body>
    <div class="container">
        <div ng-app="homePage" ng-controller="HomepageCtrl">
          <div class="row-fluid">
            <ul class="thumbnails">
              <li class="span4">
                <div class="thumbnail">
                  <div class="caption-top">
                    <h3>Current velocity</h3>
                    <p class="super-large">{[deptstats.current_velocity]}</p>
                  </div>
                </div>
              </li>
              <li class="span4">
                <div class="thumbnail">
                  <div class="caption-top">
                    <h3>Current Acceptance</h3>
                    <p class="super-large">{[deptstats.current_acceptance]}<span class="smaller">%</span></p>
                  </div>
                </div>
              </li>
              <li class="span4">
                <div class="thumbnail">
                  <div class="caption-top">
                    <h3>Team statistics</h3>
                    <table class="table-condensed margin-left10" width="100%">
                      <thead>
                        <tr>
                            <th class="pull-left">Team</th>
                            <th>Velocity</th>
                            <th>Acceptance</th>
                        <tr>
                      </thead>
                      <tr ng-repeat="team in teamstats">
                        <td class="pull-left">{[team.name]}</td>
                        <td>{[team.velocity]}</td>
                        <td>{[team.acceptance]}</td>
                      </tr>
                    </table>
                    </div>
                </div>
              </li>    
          </ul>

     </div>
 </div>
  </body>
</html>